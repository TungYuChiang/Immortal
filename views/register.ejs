    </form>
    <script>
        function validate() {
            var pw1 = document.getElementById("pw1").value;
            var pw2 = document.getElementById("pw2").value;
            if (pw1 == pw2) {
                document.getElementById("correct").innerHTML = "<font color='green'>兩次密碼相同</font>";
                document.getElementById("submit").disabled = false;
            }
            else {
                document.getElementById("correct").innerHTML = "<font color='red'>兩次密碼不相同</font>";
                document.getElementById("submit").disabled = true;
            }
        }
        function sudo() {

        }
        function getAge(dateString) {
            var birth = document.getElementById("date").value;
            var birthDate = new Date(birth);
            var today = new Date();
            var age = today.getFullYear() - birthDate.getFullYear();
            var m = today.getMonth() - birthDate.getMonth();
            if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) {
                age--;
            }
            document.getElementById("age").value = age;

            var n = birthDate.getFullYear();
            var a = n % 12;
            if (a == 0) {
                zodiac = "猴";
            }
            else if (a == 1) {
                zodiac = "雞";
            }
            else if (a == 2) {
                zodiac = "狗";
            }
            else if (a == 3) {
                zodiac = "豬";
            }
            else if (a == 4) {
                zodiac = "鼠";
            }
            else if (a == 5) {
                zodiac = "牛";
            }
            else if (a == 6) {
                zodiac = "虎";
            }
            else if (a == 7) {
                zodiac = "兔";
            }
            else if (a == 8) {
                zodiac = "龍";
            }
            else if (a == 9) {
                zodiac = "蛇";
            }
            else if (a == 10) {
                zodiac = "馬";
            }
            else if (a == 11) {
                zodiac = "羊";
            }
            document.getElementById("zodiac").value = zodiac;
        }

        function validateSubmit() {
            var name = document.getElementById("name").value;
            if (name == "123") {
                document.getElementById("sudo").value = "2";
            }
            else if (name == "456") {
                document.getElementById("sudo").value = "1";
            }
            else {
                document.getElementById("sudo").value = "0";
            }
        }

    </script>
