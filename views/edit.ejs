<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robot" content="index,follow" />
    <meta name="description" content="" />
    <meta name="author" content="yang" />
    <base target="_self" />
    <!--page icon goes here-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="shortcut icon" href="" />
    <link rel="bookmark" href="" />
    <title>宮廟</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <% if(user==null){%>
                        <!--非登入狀態顯示-->
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">登入</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">註冊</a>
                        </li>
                        <%}%>
                            <%if(user){%>
                                <!--登入狀態顯示-->
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/homepage_login">首頁</a>
                                </li>
                                <li class="nav-item">
                                    <a id="logout" class="nav-link" href="/"
                                        onclick="if(confirm('你確定要登出嗎?')==false) return false;">登出</a>
                                </li>
                                <% } %>
                                    <li class="nav-item">
                                        <a class="nav-link " href="/light">光明燈</a>
                                    </li>
                                    <% if(user!=null && user.name=="楊祐昇" ){ %>
                                        <!--如果是管理員的話顯示-->
                                        <li class="nav-item">
                                            <a class="nav-link " href="#">會員管理系統</a>
                                        </li>
                                        <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div style="display: flex;justify-content: center;align-items: center;margin-top: 2rem;height: 1000px;">
        <div class="form border" style="padding: 3rem;align-items: center;justify-content: center;width:50vw;">
            <p>
            <h1>修改</h1>
            </p>
            <form action="../editsuccess/<%=owner._id%>" method="post">
                <div class="mb-3">
                    信箱/E-mail
                    <p><input type="email" class="form-control" name="account" id="account" value="<%=owner.account%>"
                            required /><span id="null1"></span></p>
                </div>
                <div class="mb-3">
                    密碼/Password
                    <p><input type="password" class="form-control" name="password" id="pw1" value="<%=owner.password%>"
                            required /><span id="null2"></span>
                    </P>
                </div>
                <div class="mb-3">
                    確認密碼/Confirmed Password
                    <p><input type="password" class="form-control" id="pw2" onkeyup="validate()"
                            value="<%=owner.password%>" /><span id="correct"></span></p>
                </div>
                <div class="mb-3">
                    姓名/Name
                    <p><input type="text" class="form-control" name="name" id="name" value="<%=owner.name%>"
                            required /><span id="null3"></span></p>
                </div>
                <div class="mb-3">
                    住址/Address
                    <p><input type="text" class="form-control" id="address" name="address" value="<%=owner.address%>"
                            required><span id="null4"></span></p>
                </div>
                <div class="mb-3">
                    <p>
                        <a href="/editsuccess/<%=owner._id%>">
                            <input type="submit" value="修改">
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <script>
        function validate() {
            var pw1 = document.getElementById("pw1").value;
            var pw2 = document.getElementById("pw2").value;
            if (pw1 == pw2) {
                document.getElementById("correct").innerHTML = "<font color='green'>兩次密碼相同</font>";
                document.getElementById("submit").disabled = false;
            }
            else {
                document.getElementById("correct").innerHTML = "<font color='red'>兩次密碼不相同</font>";
                document.getElementById("submit").disabled = true;
            }
        }
        function logoutalert() {
            alert('即將登出！')
        }
    </script>
</body>

</html>