            <form action="regsuccess" method="post">
                <div class="mb-3">
                    信箱/E-mail
                    <p><input type="email" class="form-control" name="account" id="account"
                            placeholder="example@gmail.com" required /><span id="null1"></span></p>
                </div>
                <div class="mb-3">
                    密碼/Password
                    <p><input type="password" class="form-control" name="password" id="pw1" placeholder="請輸入密碼"
                            required /><span id="null2"></span>
                    </P>
                </div>
                <div class="mb-3">
                    確認密碼/Confirmed Password
                    <p><input type="password" class="form-control" id="pw2" onkeyup="validate()" placeholder="請再次輸入密碼"
                            required /><span id="correct"></span></p>
                </div>
                <div class="mb-3">
                    姓名/Name
                    <p><input type="text" class="form-control" name="name" id="name" placeholder="楊祐昇" required /><span
                            id="null3"></span></p>
                </div>
                <div class="mb-3">
                    時辰/Birth
                    <p><input type="date" class="form-control" id="date" name="birth" onblur="getAge()" required /><span
                            id="null5"></span></p>

                </div>
                <div class=" mb-3">
                    生肖/Zodiac
                    <p><input type="text" class="form-control" id="zodiac" name="zodiac" readonly="readonly" />

                </div>
                <div class="mb-3">
                    年齡/Age
                    <p><input type="text" class="form-control" id="age" name="age" readonly="readonly" />
                    </p>
                </div>
                <div class="mb-3">
                    性別/Sex
                    <p><select class="form-control" id="sex" name="sex" required>
                            <option value="">請選擇性別</option>
                            <option value="man">男</option>
                            <option value="woman">女</option>
                            <option value="other">其他</option>
                        </select></p>
                </div>
                <div class="mb-3">
                    住址/Address
                    <p><input type="text" class="form-control" id="address" name="address" onkeyup="validateNull4(this)"
                            required /><span id="null4"></span></p>
                </div>
                <div class="mb-3">
                    <input type="hidden" class="form-control" id="sudo" name="sudo">
                </div>
                <div class="mb-3">
                    <p><input type="submit" value="註冊" id="submit" onclick="validateSubmit()" />
                        <input type="reset" value="重置" />
                    </p>
                </div>
        </div>
